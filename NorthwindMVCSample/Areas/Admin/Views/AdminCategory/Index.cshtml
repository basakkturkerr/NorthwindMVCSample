
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/SiteLayout.cshtml";
}

@model List<NorthwindMVCSample.Models.VM.CategoryVM>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kategori Listesi</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Kategori Listesi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Açıklama</th>
                            
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
           
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
